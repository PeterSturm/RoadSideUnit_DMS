@page
@using DashboardWebApp.Models;
@model DashboardWebApp.Pages.RSUs.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>RSUs</h1>

@*/<p>
        <a asp-page="./Create">Create</a>
    </p>*@

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].IP) / @Html.DisplayNameFor(model => model.RSUs[0].Port)</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].Manager)</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].Manager) @Html.DisplayNameFor(model => model.RSUs[0].Manager.IP) / @Html.DisplayNameFor(model => model.RSUs[0].Manager.Port)</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].NotificationIP) / Port</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].Latitude)</th>
            <th>@Html.DisplayNameFor(model => model.RSUs[0].Longitude)</th>
            <th>Status</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rsu in Model.RSUs)
        {
        <tr class="@(rsu.Active ? "table-success" : "table-danger")">

            <td>@rsu.Name</td>
            <td>@rsu.IP.ToString() / @rsu.Port</td>
            <td>@rsu.Manager.Name</td>
            <td>@rsu.Manager.IP / @rsu.Manager.Port</td>
            <td>@rsu.NotificationIP / @rsu.NotificationPort</td>
            <td>@rsu.Latitude</td>
            <td>@rsu.Longitude</td>
            <td>@(rsu.Active ? "Active" : "Inactive")</td>
            <td><a asp-page="../TrapLogs/Index" asp-route-managerId="@rsu.Manager.Id" asp-route-rsuId="@rsu.Id">Trap Logs</a></td>
            <td><a asp-page="./Edit" asp-route-id="@rsu.Id" asp-route-managerid="@rsu.Manager.Id">Edit</a></td>
            <td><a asp-page="./Delete" asp-route-id="@rsu.Id" asp-route-managerId="@rsu.Manager.Id">Delete</a></td>
            <td><a asp-page="./Details" asp-route-rsuId="@rsu.Id" asp-route-managerId="@rsu.Manager.Id">Details</a></td>
        </tr>
        }
    </tbody>
</table>

